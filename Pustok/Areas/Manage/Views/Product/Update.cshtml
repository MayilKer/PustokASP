@model Product
@{
    ViewData["Title"] = "Update";
}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <h1>Update Table</h1>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-lg-8">
        <form asp-action="Update">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter Title">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="Enter Price">
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountPrice"></label>
                <input asp-for="DiscountPrice" class="form-control" placeholder="Enter DiscountPrice">
                <span class="text-danger" asp-validation-for="DiscountPrice"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainImage"></label>
                <input asp-for="MainImage" class="form-control" placeholder="Enter Main Image">
                <span class="text-danger" asp-validation-for="MainImage"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoverImage"></label>
                <input asp-for="HoverImage" class="form-control" placeholder="Enter Hover Image">
                <span class="text-danger" asp-validation-for="HoverImage"></span>
            </div>
            <div class="form-check">
                <input asp-for="IsArrival" class="form-check-input" placeholder="Enter IsArrival">
                <label class="form-check-label" asp-for="IsArrival"></label>
                <span class="text-danger" asp-validation-for="IsArrival"></span>
            </div>
            <div class="form-check">
                <input asp-for="IsFeature" class="form-check-input" placeholder="Enter IsFeature">
                <label class="form-check-label" asp-for="IsFeature"></label>
                <span class="text-danger" asp-validation-for="IsFeature"></span>
            </div>
            <div class="form-check">
                <input asp-for="IsMostView" class="form-check-input" placeholder="Enter IsMostView">
                <label class="form-check-label" asp-for="IsMostView"></label>
                <span class="text-danger" asp-validation-for="IsMostView"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorId"></label>
                <select class="form-control" asp-for="AuthorId">
                    <option value="" selected>Choose...</option>
                    @foreach (Author author in ViewBag.Authors)
                    {
                        <option value="@author.Id">@author.Name</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="AuthorId"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreId"></label>
                <select class="form-control" asp-for="GenreId">
                    <option value="" selected>Choose...</option>
                    @foreach (Genre genre in ViewBag.Genres)
                    {
                        <option value="@genre.Id">@genre.Name</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="GenreId"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>

@section Script{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
